extends ../common/layout
block content
  div(class='container')
    form(class='form-horizontal',action='/register/invite',method='post')
      div(class='login')
        div(class='login-screen')
          div(class='login-icon')
            img(src='images/login/icon.png' alt='Welcome to Mail App')
            h4 欢迎来到
              small Mark笔记
          div(class='login-form')
            div(class='form-group')
              input(type='text' class='form-control login-field' name='email' value='' placeholder='注册邮箱' id='_account')
              label(class='login-field-icon fui-user' for='login-name')
            div(class='form-group')
              input(type='text' class='form-control login-field' name='nickname' value='' placeholder='昵称' id='_password')
              label(class='login-field-icon fui-lock' for='login-pass')
            button(class='btn btn-primary btn-lg btn-block' type='submit') 注册
  include ../common/footer
  script
